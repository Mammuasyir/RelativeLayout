<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgregister"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/nunitobold"
        android:text="Login"
        android:textColor="#2F80ED"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/logo"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Email"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_register"/>

    <EditText
        android:id="@+id/colum_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colominput"
        android:hint="Enter Valid Email Here"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/email"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Password"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/colum_email"/>

    <EditText
        android:id="@+id/colum_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colominput"
        android:hint="Enter Password"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/password"/>

    <ImageView
        android:id="@+id/sosmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colum_password"
        android:layout_marginTop="30dp"
        android:src="@drawable/sosmed" />


    <TextView
        android:id="@+id/txt_new"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/nunitoregular"
        android:text="New Here?"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_below="@+id/sosmed"/>
    <TextView
        android:id="@+id/txt_up"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitoregular"
        android:text="Register"
        android:layout_marginTop="90dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_below="@+id/sosmed"
        android:layout_toRightOf="@+id/txt_new"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/nunitobold"
        android:text="Login"
        android:textColor="@color/bluesky"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/sosmed"
        android:layout_alignParentRight="true"/>

</RelativeLayout>